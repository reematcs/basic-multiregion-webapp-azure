{
  "version": "0.2.0",
  "configurations": [
   {
     "name": "Debug Frontend React",
     "type": "pwa-chrome",
     "request": "launch",
     "url": "http://localhost:3000",
     "webRoot": "${workspaceFolder}/health-dashboard/frontend",
     "sourceMapPathOverrides": {
       "/app/*": "${workspaceFolder}/health-dashboard/frontend/*"
     }
   },
   {
     "name": "Debug Frontend Node",
     "type": "node",
     "request": "attach",
     "port": 9230,  // Updated to match the new port mapping
     "address": "localhost",
     "localRoot": "${workspaceFolder}/health-dashboard/frontend",
     "remoteRoot": "/app",
     "restart": true,
     "skipFiles": [
       "<node_internals>/**",
       "**/node_modules/**"
     ]
   },
   {
     "name": "Debug West US",
     "type": "go",
     "request": "attach",
     "mode": "remote",
     "remotePath": "/app",
     "port": 2345,
     "host": "127.0.0.1",
     "showLog": true
   },
   {
     "name": "Debug Central US",
     "type": "go",
     "request": "attach",
     "mode": "remote",
     "remotePath": "/app",
     "port": 2345,
     "host": "127.0.0.1",
     "showLog": true
   }
 ],
 "compounds": [
   {
     "name": "Full Stack Debug",
     "configurations": [
       "Debug Frontend React", 
       "Debug Frontend Node",
       "Debug West US",
       "Debug Central US"
     ]
   }
 ]
}